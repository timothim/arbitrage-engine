# =============================================================================
# Arbitrage Engine Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit your actual .env file!

# =============================================================================
# Exchange Credentials (REQUIRED)
# =============================================================================
BINANCE_API_KEY=your_api_key_here
BINANCE_API_SECRET=your_api_secret_here

# =============================================================================
# Network Configuration
# =============================================================================
# Use Binance testnet instead of production (recommended for testing)
USE_TESTNET=true

# =============================================================================
# Trading Configuration
# =============================================================================
# Base currency for arbitrage cycles (USDT, USDC, BUSD)
BASE_CURRENCY=USDT

# Trading fee rate per leg (0.001 = 0.1%)
FEE_RATE=0.001

# Minimum profit threshold to execute (0.0005 = 0.05%)
MIN_PROFIT_THRESHOLD=0.0005

# Maximum position size as percentage of balance (0.20 = 20%)
MAX_POSITION_PCT=0.20

# Slippage buffer for order prices (0.0001 = 0.01%)
SLIPPAGE_BUFFER=0.0001

# =============================================================================
# Risk Management
# =============================================================================
# Maximum daily loss in base currency
DAILY_LOSS_LIMIT=50.0

# Maximum time to hold a position (milliseconds)
MAX_HOLD_TIME_MS=5000

# Maximum concurrent triangles to execute
MAX_CONCURRENT_TRIANGLES=1

# =============================================================================
# Operation Mode
# =============================================================================
# Dry run mode - simulate trades without sending orders
DRY_RUN=true

# Logging verbosity (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# =============================================================================
# Performance
# =============================================================================
# Use uvloop for better async performance
USE_UVLOOP=true

# Maximum number of triangles to monitor
MAX_TRIANGLES=100

# Order placement timeout (milliseconds)
ORDER_TIMEOUT_MS=5000
